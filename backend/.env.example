# Server Configuration
PORT=8080
NODE_ENV=production

# Database Configuration Railway
# Ganti dengan nilai dari Railway MySQL service
RAILWAY_MYSQL_HOST=containers-us-west-xxx.railway.app
RAILWAY_MYSQL_PORT=6543
RAILWAY_MYSQL_USER=root
RAILWAY_MYSQL_PASSWORD=your-mysql-password
RAILWAY_MYSQL_DATABASE=railway

# Atau gunakan MySQL URL yang disediakan Railway
# MYSQL_URL=mysql://root:password@containers-us-west-xxx.railway.app:6543/railway

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Secret
JWT_SECRET=your-jwt-secret-key

# Password Salt
PASSWORD_SALT=your-password-salt

# Cara mendapatkan credentials Railway MySQL:
# 1. Masuk ke dashboard Railway
# 2. Pilih project Anda
# 3. Klik pada MySQL service
# 4. Buka tab "Connect"
# 5. Salin credentials atau connection string
